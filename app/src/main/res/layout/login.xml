<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <RelativeLayout android:layout_width="match_parent"
        android:background="#4E74F4"
        android:textAlignment="center"
        android:id="@+id/toolbar_11"
        android:layout_height="128dp"
        android:elevation="20dp">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy to See You Again"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:textStyle="bold"
            android:fontFamily="@font/popiins"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            />
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/toolbar11_button"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/ic_arrow_back_white_24dp">

        </Button>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_11"
        android:layout_marginTop="80dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/linear_layout_login">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f4"
            android:fontFamily="@font/opensans"
            android:hint="Email Address"
            android:id="@+id/email"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:inputType="textEmailAddress" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#f4f4f4"
            android:fontFamily="@font/opensans"
            android:inputType="textPassword"
            android:hint="Password"
            android:id="@+id/password"
            android:padding="10dp"
            android:textColor="@android:color/black"/>

    </LinearLayout>


    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear_layout_login"
        android:background="@drawable/button"
        android:fontFamily="@font/popiins"
        android:textColor="@android:color/white"
        android:id="@+id/submit"
        android:text="Continue"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/popiins"
        android:layout_marginTop="20dp"
        android:text="Forgot your Password?"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/submit"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:id="@+id/fp_text"
        >

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/popiins"
        android:layout_marginTop="20dp"
        android:text="Click Here"
        android:layout_marginStart="5dp"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:onClick="support"
        android:id="@+id/click_here"
        android:layout_below="@id/submit"
        android:layout_toEndOf="@+id/fp_text"
        android:layout_centerHorizontal="true">

    </TextView>





</RelativeLayout>