<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:id="@+id/toolbar_aboutme"
            android:background="#FFFFFF"
            android:elevation="20dp">


            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="43dp"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/toolbar_back_about_me"
                android:background="@drawable/ic_arrow_back_black">

            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Me"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/about_me"
                android:fontFamily="@font/popiins"
                android:textSize="20sp"

                />
        </RelativeLayout>



        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_layout_1"
            android:layout_below="@+id/toolbar_aboutme"
            >
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/description"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="125dp"
                    android:maxLines="10"
                    android:textSize="18sp"
                    android:background="#f4f4f4"
                    android:hint="A short description..."
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/opensans"
                    >
                    <!--android:drawableEnd="@drawable/ic_info_black_24dp"-->

                </EditText>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_info_black_24dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/job_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:background="#f4f4f4"
                    android:textSize="18sp"
                    android:focusable="true"
                    android:maxHeight="80dp"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/opensans"
                    android:hint="Your Job Title"
                    android:inputType="textMultiLine"
                    android:maxLines="2"
                    android:padding="10dp"
                    android:textColor="@android:color/black">
                    <!--android:drawableEnd="@drawable/ic_info_black_24dp"-->

                </EditText>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_info_black_24dp" />

            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner"
                android:fontFamily="@font/popiins"
                android:inputType="text"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#f4f4f4"
                android:prompt="@string/Edu"
                android:padding="10dp"
                android:textColor="@android:color/black"
                >

            </androidx.appcompat.widget.AppCompatSpinner>
        </LinearLayout>
        <Button
            android:id="@+id/submit"
            android:layout_marginTop="120dp"
            android:layout_below="@+id/linear_layout_1"
            android:layout_width="300dp"
            android:fontFamily="@font/popiins"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@android:color/white"
            android:text="Continue">

        </Button>





    </RelativeLayout>

</ScrollView>