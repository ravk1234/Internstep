<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:id="@+id/toolbar_secureProfile"
        android:background="#4e74f4"
        android:elevation="20dp">


        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="45dp"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/toolbar_back_secure_profile"
            android:background="@drawable/ic_arrow_back_white_24dp">

        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure Your Profile"
            android:layout_marginTop="39dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/secure_profile"
            android:textColor="@android:color/white"
            android:fontFamily="@font/opensans"
            android:textSize="20sp"

            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar_secureProfile"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/password_layout"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f4f4f4"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/opensans"
            android:id="@+id/pass"
            >

        </EditText>
        <EditText
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f4f4f4"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/opensans"
            android:id="@+id/confirm_pass"
            >

        </EditText>


    </LinearLayout>




    <Button
        android:id="@+id/submit"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />




</RelativeLayout>