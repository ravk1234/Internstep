<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E74F4"
    >





    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:id="@+id/interstep"
        android:fontFamily="@font/montserrat_bols"
        android:textSize="30sp"
        android:text="internstep">

    </TextView>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/rect_mobile">

        <TextView

            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginStart="60dp"
            android:textSize="30sp"
            android:text="Let's get Started"
            android:textAlignment="center"
            android:id="@+id/get_started"
            android:fontFamily="@font/popiins"

            >

        </TextView>
        <Button
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="Log In"
            android:id="@+id/log_in"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@android:color/white"
            android:fontFamily="@font/popiins"
            android:textSize="18sp"
            android:background="@drawable/button">

        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Create Account"
            android:textColor="#4e74f4"
            android:fontFamily="@font/popiins"
            android:layout_marginStart="100dp"
            android:id="@+id/create_account"
            android:layout_marginTop="10dp">

        </TextView>





    </LinearLayout>


</RelativeLayout>